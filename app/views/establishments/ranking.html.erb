<link type="text/css" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500">

<div class="search-Ranking">
  <div align="center" class="row paragraph order-space">
    Pesquisar Ranking por Cidade/Estado:
  </div>
  <form action="#" id="rankingForm" method="get">
    <div class="input-group search-Ranking-input">
      <input type="text" class="form-control search-fields" aria-label="Campo para filtro por região" placeholder="Busque uma cidade/Estado" id="searchRanking" autofocus="">
      <span class="input-group-btn">
        <button type="submit" class="btn search-inputButton get" id="search-btn">
          <span>Pesquisar</span>
        </button>
      </span>
    </div>
  </form>
</div>

<div class="filter">
  <div class="row order-space">
    Ordenar ranking por:
  </div>
  <div class="ranking-buttons text-center">
    <a name="ranking" id='bestPlacesButtonRanking' ><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> Melhores</a>
    <span> | </span>
    <a id='worstPlacesButtonRanking' >Piores <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></a>
    </div>
  </div>
  <div class="col-lg-8 col-lg-offset-2 col-xs-12 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
    <div id="rankingListAll">

    </div>

    <div align="center">
      <a class="show-more-button" id="showMoreRanking">Ver mais</a>
    </div>

    <div id="share-buttons" align="center" class="row order-space text-center">
      <span class="share-text text-bold">Clique nos botões abaixo para compartilhar este ranking!</span>
      <br>
      <div class="floated">
        <a href="http://www.facebook.com/sharer.php?u=http://naomecalotw-test.herokuapp.com/ranking" target="_blank">
          <img class="large-square-share-button spacing-to-share-button" src="https://whatswp.com/wp-content/uploads/2014/04/sh-150x150.png" alt="Facebook" />
        </a>
        <a href="https://twitter.com/share?url=http://naomecalotw-test.herokuapp.com/ranking/&amp;text=<%= @share_text %>&amp;hashtags=naomecalo" target="_blank">
          <img class="large-square-share-button" src="http://www.siamcomm.com/wp-content/uploads/2011/05/twitter.png" alt="Twitter" />
        </a>
      </div>
    </div>
  </div>
